{
    "title": "Chrome Full Screen",
    "conditions": [
        {
            "type": "frontmost_application_if",
            "bundle_identifiers": [
                "^com\\.google\\.Chrome"
            ]
        }
    ],
    "rules": [
        {
            "description": "Command Control F to Fullscreen",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {

                        "key_code": "f",
                        "modifiers": {
                            "mandatory": ["left_control", "left_command"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f",
                            "modifiers": ["fn"]
                        }
                    ]
                }
            ]
        }
    ]
}
