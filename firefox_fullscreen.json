{
    "title": "Firefox Full Screen",
    "conditions": [
        {
            "type": "frontmost_application_if",
            "bundle_identifiers": [
                "^org\\.mozilla\\.firefox"
            ]
        }
    ],
    "rules": [
        {
            "description": "Firefox Command Control F to Fullscreen",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": ["left_control", "left_command"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f",
                            "modifiers": {
                                "mandatory": ["left_shift", "left_command"]
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
